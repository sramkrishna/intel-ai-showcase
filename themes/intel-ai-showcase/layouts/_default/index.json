{{- $pages := where .Site.RegularPages "Type" "in" (slice "projects") -}}
[
{{- range $index, $page := $pages }}
  {{- if $index }},{{ end }}
  {
    "title": {{ $page.Title | jsonify }},
    "summary": {{ $page.Summary | plainify | jsonify }},
    "permalink": "{{ .RelPermalink }}"
  }
{{- end }}
]
